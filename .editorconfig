root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{json,yml,yaml}]
indent_size = 2

[*.py]
max_line_length = 100
indent_size = 4

[*.md]
max_line_length = 100
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
